<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Home"
            left_action_items: [["menu", lambda x: app.open_menu()]]
            md_bg_color: 0.5, 0.5, 0.4, 1
            padding: [0, 0, 40, 0]
            elevation: 0  # Remove shadow from top app bar

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: 10  # Spacing between buttons
                padding: [20, 20, 20, 20]  # Padding around the content
                adaptive_height: True

                MDRaisedButton:
                    text: "Compress Files"
                    on_release: app.change_screen("compression")
                    size_hint_x: 1  # Button takes full width
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "Archive Reader"
                    on_release: app.change_screen("archive")
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "Converter"
                    on_release: app.change_screen("converter")
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "File Manager"
                    on_release: app.change_screen("file_manager")
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

        MDBottomNavigation:
            id: bottom_nav
            panel_color: 0.5, 0.5, 0.4, 1
            elevation: 0  # Remove shadow from bottom navigation

            MDBottomNavigationItem:
                name: "tab_home"
                text: "Home"
                icon: "home"
                on_tab_press: app.change_screen("home")
                MDLabel:
                    halign: "center"

            MDBottomNavigationItem:
                name: "tab_account"
                text: "Account"
                icon: "account"
                on_tab_press: app.change_screen("account")
                MDLabel:
                    halign: "center"

            MDBottomNavigationItem:
                name: "tab_settings"
                text: "Settings"
                icon: "cog"
                on_tab_press: app.change_screen("settings")
                MDLabel:
                    halign: "center"
