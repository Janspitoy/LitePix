<SettingsScreen>:
    name: "settings"
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            md_bg_color: 0.5, 0.5, 0.4, 1
            left_action_items: [["menu", lambda x: app.open_menu()]]
            title: "Settings"
            padding: [0, 0, 40, 0]
            elevation: 0  # Remove shadow from top app bar

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: 10  # Spacing between buttons
                padding: [20, 20, 20, 20]  # Padding around the content
                adaptive_height: True

                MDRaisedButton:
                    text: "Change Email"
                    size_hint_x: 1  # Button takes full width
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "Change Password"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "Change Name"
                    size_hint_x: 1  # Button takes full width
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "About Us"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0  # Remove shadow from button

                MDRaisedButton:
                    text: "Logout"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.3, 0.3, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0
                    on_release: app.logout()

        MDBottomNavigation:
            id: bottom_nav
            panel_color: 0.5, 0.5, 0.4, 1
            elevation: 0  # Remove shadow from bottom navigation

            MDBottomNavigationItem:
                name: "tab_home"
                text: "Home"
                icon: "home"
                on_tab_press: app.change_screen("home")
                MDLabel:
                    halign: "center"

            MDBottomNavigationItem:
                name: "tab_account"
                text: "Account"
                icon: "account"
                on_tab_press: app.change_screen("account")
                MDLabel:
                    halign: "center"

            MDBottomNavigationItem:
                name: "tab_settings"
                text: "Settings"
                icon: "cog"
                MDLabel:
                    halign: "center"
