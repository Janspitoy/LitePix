<MenuScreen>:
    name: "menu"
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            md_bg_color: 0.5, 0.5, 0.4, 1
            left_action_items: [["arrow-left", lambda x: root.close_menu()]]
            title: "Menu"
            padding: [0, 0, 40, 0]
            elevation: 0  # Remove shadow from top app bar

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: 10  # Spacing between items
                padding: [20, 20, 20, 20]  # Padding around the content
                adaptive_height: True

                MDRaisedButton:
                    text: "Home"
                    size_hint_x: 1  # Full width
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0
                    on_release: root.navigate_to("home")

                MDRaisedButton:
                    text: "Account"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0
                    on_release: root.navigate_to("account")

                MDRaisedButton:
                    text: "Settings"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.6, 0.5, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0
                    on_release: root.navigate_to("settings")

                MDRaisedButton:
                    text: "Logout"
                    size_hint_x: 1
                    md_bg_color: 0.6, 0.3, 0.3, 1
                    text_color: 1, 1, 1, 1
                    elevation: 0
                    on_release: app.logout()
